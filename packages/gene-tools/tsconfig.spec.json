{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.spec.ts", "jest.config.ts"]
}
