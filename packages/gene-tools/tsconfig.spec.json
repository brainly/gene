{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "include": ["**/*.spec.ts", "jest.config.ts"],
}
